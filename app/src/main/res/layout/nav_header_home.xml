<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@color/colorPrimary"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:gravity="center_vertical"
        android:padding="@dimen/space_16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/nav_header_photo"
            android:contentDescription="@string/nav_header_desc"
            android:layout_width="@dimen/space_70dp"
            android:layout_height="@dimen/space_70dp"
            android:src="@drawable/ic_logo_ride"
            app:civ_border_width="@dimen/space_5dp"
            app:civ_border_color="@color/colorWhite"/>
        <LinearLayout
            android:paddingLeft="@dimen/space_16dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/user_full_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:paddingTop="@dimen/space_8dp"
                android:text="@string/nav_header_title"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
            <TextView
                android:id="@+id/user_email"
                android:textSize="@dimen/size_12sp"
                android:textColor="@color/colorWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav_header_subtitle" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:background="@drawable/side_nav_bar"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/space_16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">
        <TextView
            android:layout_marginBottom="@dimen/space_5dp"
            android:textSize="@dimen/size_14sp"
            android:text="To-Let Visa Card"
            android:textColor="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="@dimen/size_12sp"
            android:text="4% back on dining and more."
            android:textColor="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
